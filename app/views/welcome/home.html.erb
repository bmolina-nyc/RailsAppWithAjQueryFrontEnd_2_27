<h3>Sign Up or  <a href="#">Login</a> </h3>

<div id ="signup">
  <%= form_for :user, url: '/users' do |f| %>
    <div id= "field_1">
      <%= f.label :username %>
      <%= f.text_field :username %> 
    <div>

    <div id= "field_2">
      <%= f.label :password %>
      <%= f.password_field :password %> 
    </div>

    <div id= "field_3">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %> <br><br>
    </div>

    <div id="submit">
    <%= f.submit "Sign Up" %>
  <% end %>
</div>




<div id ="login" >
  <%= form_for :user, url: '/login' do |f| %>
    <div id= "field_1">
      <%= f.label :username %>
